---
import config from "../../../config.json";
---

<header>
  <div>
    <div></div>
    <h2>{config.profile.name}</h2>
  </div>
</header>

<style>
  header {
    z-index: 1;
    margin: 0 auto;
    margin-top: -3.5rem;
    max-width: calc(600px - 2px);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0px 0.3px 2.2px rgb(18 18 18 / 2%),
      0px 0.8px 5.3px rgb(18 18 18 /28%), 0px 1.5px 10px rgb(18 18 18 /35%),
      0px 2.7px 17.9px rgb(18 18 18 /42%), 0px 5px 33.4px rgb(18 18 18 / 5%),
      0px 12px 80px rgb(18 18 18 / 7%);
    background: linear-gradient(
      to bottom,
      rgba(18 18 18 / 80%),
      rgba(18 18 18 / 100%)
    );
    backdrop-filter: blur(15px);
    position: sticky;
    top: 0;
  }
  div {
    display: grid;
    grid-template-columns: 3rem auto;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
  }
  h2 {
    font-size: 1.25rem;
  }
</style>
